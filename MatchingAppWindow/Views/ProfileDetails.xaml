<Page x:Class="MatchingAppWindow.Views.ProfileDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatchingAppWindow.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="250"
      Title="ProfileDetails"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="122*"/>
        </Grid.RowDefinitions>
        <Image x:Name="profileImage" Grid.Row="0" Source="/Views/pasfoto.jpg" Margin="0,7,0,7" />
        <Label x:Name="nameLabel" Grid.Row="1" HorizontalContentAlignment="Center"/>
        <TextBlock x:Name="descriptionBlock" Grid.Row="2" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <TextBlock x:Name="interestBlock" Grid.Row="3" Text="" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <ItemsControl x:Name="detailList" Grid.Row="4">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
