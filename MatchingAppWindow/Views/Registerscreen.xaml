<Page
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:MatchingAppWindow.Views"
	  xmlns:Enums="clr-namespace:KBS_project.Enums;assembly=MatchingAppCore" x:Class="MatchingAppWindow.Views.RegisterScreen"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="Register">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="135"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <ListBox x:Name="imageBox" ItemsSource="{Binding ImageList, Mode=TwoWay}" VerticalAlignment="Center" Height="135" Background="#FF9ACDFF" BorderBrush="#FF000002" Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Width="125" Height="125"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <Button x:Name="AddPhotoButton" Content="Foto toevoegen" Margin="680,70,0,0" BorderThickness="3,3,3,3" Click="AddPhoto" HorizontalAlignment="Left" Width="100" Height="24" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="deletePhotoButton" Content="Foto Verwijderen" Margin="680,99,0,0" BorderThickness="3,3,3,3" Click="DeletePhoto" HorizontalAlignment="Left" Width="100" Height="24" VerticalAlignment="Top" IsEnabled="False" Grid.Column="1"/>

        <Label Content="Gebruikersnaam" FontSize="15" Height="32" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2"/>
        <TextBox x:Name="userNameInput" TextWrapping="Wrap" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" BorderThickness="2,2,2,2" Grid.Column="3" Grid.Row="2"/>

        <Label Content="Woonplaats:" Height="32" VerticalAlignment="Top" FontSize="15" Grid.Column="4" Grid.Row="2"/>
        <TextBox x:Name="cityInput" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="TextBox_TextChanged_1" FontSize="15" BorderThickness="2,2,2,2" Grid.Column="5" Grid.Row="2" Height="32"/>

        <Label Content="Voornaam:" Margin="98,53,0,0" FontSize="15" HorizontalAlignment="Left" Width="123" Height="32" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="firstNameInput" Margin="256,54,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="90" Height="32" VerticalAlignment="Top" BorderThickness="2,2,2,2" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="infixInput" Margin="350,54,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="48" Height="32" VerticalAlignment="Top" BorderThickness="2,2,2,2" Grid.Column="1" Grid.Row="1"/>

        <Label Content="Land:" Margin="416,53,0,0" Height="30" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="132" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="countryInput" Margin="548,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="32" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="142" BorderThickness="2,2,2,2" RenderTransformOrigin="0.5,0.5" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Achternaam:" Margin="98,91,0,0" FontSize="15" HorizontalAlignment="Left" Width="123" Height="32" VerticalAlignment="Top" Grid.Column="1" Grid.RowSpan="3" Grid.Row="1"/>
        <TextBox x:Name="lastNameInput" Margin="256,91,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="142" Height="32" VerticalAlignment="Top" BorderThickness="2,2,2,2" Grid.Column="1" Grid.RowSpan="3" Grid.Row="1"/>

        <Label Content="Postcode:" Margin="416,92,0,0" Height="30" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="132" Grid.Column="1" Grid.RowSpan="3" Grid.Row="1"/>
        <TextBox x:Name="postalCodeInput" Margin="548,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="32" TextChanged="TextBox_TextChanged_1" FontSize="15" BorderThickness="2,2,2,2" HorizontalAlignment="Left" Width="142" Grid.Column="1" Grid.RowSpan="3" Grid.Row="1"/>

        <Label Content="Seksuele preferentie:" Margin="98,20,0,0" FontSize="15" HorizontalAlignment="Left" Width="155" Height="32" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3"/>
        <RadioButton x:Name="heteroSexual" GroupName="Sexuality" Content="Hetero" Margin="260,26,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="86" Height="20" VerticalAlignment="Top" FontSize="15" Grid.Column="1" Grid.Row="3"/>
        <RadioButton x:Name="homoSexual" GroupName="Sexuality" Content="Homosexueel" Margin="357,26,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="112" Height="20" VerticalAlignment="Top" FontSize="15" Grid.Column="1" Grid.Row="3"/>
        <RadioButton x:Name="biSexual" GroupName="Sexuality" Content="Bisexueel" Margin="482,26,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="86" Height="20" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.474,0.158" Grid.Column="1" Grid.Row="3"/>

        <Label Content="Geslacht:" Margin="98,57,0,0" FontSize="15" HorizontalAlignment="Left" Width="155" Height="32" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3"/>
        <RadioButton x:Name="femaleGender" GroupName="Gender" Content="Vrouw" Margin="260,62,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="86" Height="20" VerticalAlignment="Top" FontSize="15" Grid.Column="1" Grid.Row="3"/>
        <RadioButton x:Name="maleGender" GroupName="Gender" Content="Man" Margin="0,63,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Center" Width="86" Height="20" VerticalAlignment="Top" FontSize="15" Grid.Column="1" Grid.Row="3"/>
        <RadioButton x:Name="nonBinaryGender" GroupName="Gender" Content="Non-binair" Margin="482,63,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="98" Height="20" VerticalAlignment="Top" FontSize="15" Grid.Column="1" Grid.Row="3"/>

        <Label Content="Geboortedatum:" Margin="100,89,0,0" FontSize="15" HorizontalAlignment="Left" Width="155" Height="32" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2"/>
        <DatePicker x:Name="birthDatePicker" Margin="260,94,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" HorizontalAlignment="Left" Width="142" Height="32" BorderThickness="2,2,2,2" BorderBrush="#FFA3AEB9" Background="White" Grid.Column="1" Grid.Row="3"/>

        <Button x:Name="CreateAccountButton" Content="Account aanmaken" Margin="0,141,0,0" Click="RegisterAccount" FontSize="15" HorizontalAlignment="Center" Width="264" Background="White" Grid.Column="1" Height="34" VerticalAlignment="Top" Grid.Row="3"/>

        <Label x:Name="errorMessage" Content="Voer alle verplichte velden in" Grid.ColumnSpan="2" Margin="0,141,39,0" Foreground="Red" FontWeight="Bold" FontSize="15" HorizontalAlignment="Right" Width="224" Height="30" VerticalAlignment="Top" Visibility="Hidden" Grid.Row="3" />

    </Grid>
</Page>
