<Page x:Class="MatchingAppWindow.Views.RegisterScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatchingAppWindow.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid Background="White">
        <Image x:Name="ProfileImage" Margin="33,28,0,0" Source="/Views/DefaultImage.png" HorizontalAlignment="Left" Width="141" Height="141" VerticalAlignment="Top"/>
        <Button x:Name="AddPhotoButton" Content="Foto toevoegen" Margin="74,174,0,0" BorderThickness="3,3,3,3" Click="Button_Click" HorizontalAlignment="Left" Width="100" Height="24" VerticalAlignment="Top"/>
        <Label Content="Gebruikersnaam:" Margin="210,28,0,0" FontSize="15" HorizontalAlignment="Left" Width="155" Height="32" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameBox" Margin="400,28,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="228" Height="32" VerticalAlignment="Top"/>
        <Label Content="Seksuele preferentie:" Margin="210,265,0,0" FontSize="15" HorizontalAlignment="Left" Width="145" Height="32" VerticalAlignment="Top"/>
        <RadioButton Content="Vrouwen" Margin="403,271,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Mannen" Margin="495,271,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Iedereen" Margin="587,271,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.474,0.158"/>
        <Label Content="Geslacht:" Margin="210,302,0,0" FontSize="15" HorizontalAlignment="Left" Width="145" Height="32" VerticalAlignment="Top"/>
        <RadioButton Content="Vrouw" Margin="403,308,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Man" Margin="495,308,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Non-binair" Margin="587,308,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="99" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <DatePicker x:Name="BirthDatePicker" Margin="400,103,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" HorizontalAlignment="Left" Width="138" Height="32"/>
        <Label Content="Postcode:" Margin="210,230,0,0" Height="30" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="132"/>
        <TextBox x:Name="PostalCodeBox" Margin="400,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="138"/>
        <Label Content="Adres:" Margin="210,137,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="132"/>
        <TextBox x:Name="AdressBox" Margin="400,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="138"/>
        <Label Content="Woonplaats:" Margin="210,168,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="132"/>
        <TextBox x:Name="CityBox" Margin="400,168,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="138"/>
        <Button x:Name="CreateAccountButton" Content="Account aanmaken" Margin="262,377,0,0" Click="Button_Click_1" FontSize="15" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="276"/>
        <Label Content="Voor- en achternaam" Margin="210,66,0,0" FontSize="15" HorizontalAlignment="Left" Width="155" Height="32" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameBox_Copy2" Margin="400,66,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="112" Height="32" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameBox_Copy" Margin="517,66,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="112" Height="32" VerticalAlignment="Top"/>
        <Label Content="Geboortedatum:" Margin="210,103,0,0" FontSize="15" HorizontalAlignment="Left" Width="155" Height="32" VerticalAlignment="Top"/>
        <Label Content="Land:" Margin="210,199,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="132"/>
        <TextBox x:Name="PostalCodeBox_Copy" Margin="400,199,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="138"/>
    </Grid>
</Page>
