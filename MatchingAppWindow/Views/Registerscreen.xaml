<Page x:Class="MatchingAppWindow.Views.RegisterScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatchingAppWindow.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid Background="White">
        <Image Margin="33,28,0,0" Source="/Views/DefaultImage.png" HorizontalAlignment="Left" Width="141" Height="141" VerticalAlignment="Top"/>
        <Button Content="Foto toevoegen" Margin="74,174,0,0" BorderThickness="3,3,3,3" Click="Button_Click" HorizontalAlignment="Left" Width="100" Height="24" VerticalAlignment="Top"/>

        <Label Content="Gebruikersnaam:" Margin="210,37,0,0" FontSize="15" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="145" Height="32" VerticalAlignment="Top"/>
        <TextBox x:Name="UserNameBox" Margin="400,37,0,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.292,0.316" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="198" Height="32" VerticalAlignment="Top"/>

        <Label Content="Seksuele preferentie:" Margin="210,82,0,0" FontSize="15" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="145" Height="32" VerticalAlignment="Top"/>
        <RadioButton Content="Vrouwen" Margin="400,88,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Mannen" Margin="492,88,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Iedereen" Margin="584,88,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>

        <Label Content="Geslacht:" Margin="210,127,0,0" FontSize="15" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="145" Height="32" VerticalAlignment="Top"/>
        <RadioButton Content="Vrouw" Margin="400,133,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Man" Margin="492,133,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Anders" Margin="584,133,0,0" Checked="RadioButton_Checked" HorizontalAlignment="Left" Width="87" Height="20" VerticalAlignment="Top" FontSize="15"/>

        <Label Content="Geboortedatum:" Margin="262,181,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="133"/>
        <DatePicker Margin="400,184,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" HorizontalAlignment="Left" Width="139"/>
        
        <Label Content="Postcode:" Margin="262,212,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="133"/>
        <Label Content="Adres:" Margin="262,244,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="133"/>
        <Label Content="Woonplaats" Margin="262,275,0,0" Height="26" VerticalAlignment="Top" FontSize="15" HorizontalAlignment="Left" Width="133"/>
        
        <TextBox x:Name="PostalCodeBox" Margin="400,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="139"/>
        <TextBox x:Name="AdressBox" Margin="400,244,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="139"/>
        <TextBox x:Name="CityBox" Margin="400,275,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" TextChanged="TextBox_TextChanged_1" FontSize="15" HorizontalAlignment="Left" Width="139"/>
        <Button x:Name="CreateAccountButton" Content="Account aanmaken" Margin="262,344,0,0" Click="Button_Click_1" FontSize="15" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="276"/>
    </Grid>
</Page>
